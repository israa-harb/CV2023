    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>CV</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CV.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CV.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CV.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CV.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CV.Birthday)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CV.Birthday)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CV.Nationality)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CV.Nationality)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CV.Gender)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CV.Gender)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CV.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CV.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CV.Grade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CV.Grade)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CV.Image)
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.CV.Image" alt="Image" width="300px" height="auto" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CV.HasSkills)
        </dt>
        <ul>
            @foreach (var skill in Model.CV.HasSkills)
            {
                <li>@skill.Skill.Name</li>
            }
        </ul>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="CV.CVID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./BrowseCV">Back to List</a>
    </form>
</div>
