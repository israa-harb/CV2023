@page
@model BrowseCVModel
@{
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CV[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CV[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CV[0].Birthday)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CV[0].Nationality)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CV[0].Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CV[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CV[0].Grade)
            </th>
            <th>
                
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CV)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Birthday)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nationality)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Grade)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.CVID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.CVID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.CVID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>